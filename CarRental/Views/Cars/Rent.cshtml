@model Projekt_strona.Models.Rental

<h2>Wypożycz samochód</h2>

<form asp-action="Rent" method="post">
    <input type="hidden" asp-for="CarId" />
    <input type="hidden" asp-for="RentDate" /> <!-- Zmieniono z RentalDate na RentDate -->
    <div class="form-group">
        <label>Wybierz klienta</label>
        <select asp-for="CustomerId" class="form-control">
            @foreach (var customer in ViewBag.Customers)
            {
                <option value="@customer.Id">@customer.FirstName @customer.LastName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Wypożycz</button>
</form>