@model List<Projekt_strona.Models.Car>

@{
    ViewData["Title"] = "Strona główna";
}

<h1>Lista samochodów</h1>
<p>Witaj w naszej wypożyczalni!</p>

<a asp-action="Create" class="details-link">Dodaj nowy samochód</a>

@if (Model != null && Model.Any())
{
    <ul class="car-list">
        @foreach (var car in Model)
        {
            <li class="car-item">
                @car.Make @car.Model - @car.Year
                <span class="availability @(car.IsAvailable ? "available" : "unavailable")">
                    (@(car.IsAvailable ? "Dostępny" : "Niedostępny"))
                </span>
                <div>
                    <a asp-action="Edit" asp-route-id="@car.Id" class="details-link">Edytuj</a>
                    <form asp-action="Delete" asp-route-id="@car.Id" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="details-link delete-btn">Usuń</button>
                    </form>
                </div>
            </li>
        }
    </ul>
}
else
{
    <p class="no-cars">Brak samochodów w bazie.</p>
}