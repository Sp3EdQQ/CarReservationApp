@model Projekt_strona.Models.Customer

@{
    ViewData["Title"] = "Usuń klienta";
}

<h2>Usuń klienta</h2>

<h3>Czy na pewno chcesz usunąć tego klienta?</h3>

<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <dl class="row">
        <dt class="col-sm-2">Imię</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">Nazwisko</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        <dt class="col-sm-2">Numer telefonu</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-action="Index" class="btn btn-secondary">Wróć</a>
    </form>
</div>