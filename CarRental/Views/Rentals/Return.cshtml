@model Projekt_strona.Models.Rental

@{
    ViewData["Title"] = "Zwrot samochodu";
}

<h2>Zwrot samochodu</h2>

<p>Czy na pewno chcesz zwrócić samochód <strong>@Model.Car.Make @Model.Car.Model (@Model.Car.Year)</strong>?</p>

<form asp-action="Return" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-warning">Zwróć samochód</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
