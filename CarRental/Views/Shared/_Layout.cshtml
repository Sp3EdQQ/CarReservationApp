<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wypożyczalnia samochodów</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <nav class="navbar">
            <a asp-controller="Cars" asp-action="Index">Strona główna</a>
        </nav>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="footer">
        <p>© 2025 - Wypożyczalnia samochodów</p>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>